# Copy this file to `api/.env` for local development.
# Values below are safe defaults for running via `infra/compose.yaml`.

APP_ENV=development
API_HOST=0.0.0.0
API_PORT=8000
APP_LOG_LEVEL=INFO

# Authentication / crypto
SECRET_KEY=change-me
ENCRYPTION_KEY=replace-with-fernet-key

# Primary services
OPENAI_API_KEY=sk-your-openai-key
APP_DATABASE__URL=postgresql+psycopg2://postgres:postgres@db:5432/postgres
APP_DATABASE__ECHO=false
APP_REDIS__URL=redis://redis:6379/0
APP_REDIS__HEALTH_CHECK_INTERVAL=30
REDIS_URL=redis://redis:6379/0
TZ=America/Chicago

# Optional outbound channels
RESEND_API_KEY=
RESEND_FROM_EMAIL=
EXPO_ACCESS_TOKEN=
EXPO_PUSH_URL=https://exp.host/--/api/v2/push/send

# Google Calendar OAuth
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
GOOGLE_REDIRECT_URI=http://localhost:8000/oauth/google/callback

# Stripe billing (optional)
STRIPE_API_KEY=
STRIPE_PRICE_PRO=
STRIPE_WEBHOOK_SECRET=

# Celery / scheduling
CELERY_BEAT=true

# Demo seed data
SEED_USER_EMAIL=demo@example.com
SEED_API_KEY=sk-demo-accountability
